<!-- User's account screen. -->

<!doctype html>

<html>

<head>
	<title>My Account</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/app.css">
	<link rel="stylesheet" type="text/css" href="/css/account.css">
	<script src="/js/analytics.js"></script>
</head>

<body>
	<div class="container wrap">
		<div id="mainDiv">
			<div class="row sidebarToggleButton">
				<a href="#menu-toggle" id="mainDivSidebarButtonImg">
					<img src="/images/HamburgerMenuBar-01.png" />
				</a>
			</div>
			<div id="questList" class="container-fluid">
				<!-- <button class="backBtn">Back</button> -->
				<div class="container-fluid">
					<div class="row">
						<div class="col-xs-4">
							<img src="/images/characters/CharacterFront.png" height="100px">
						</div>
						<div class="col-xs-6">
							<div>{{user.username}}</div>
							<div>{{user.name}}</div>
							<div><a href="/account/details" class="btn" id="btnChangeInfo">Change your info</a></div>
						</div>
					</div>
				</div>
				<div class="container-fluid">
					<div class="row extra">
						<div class="col-xs-6">
							<h5 id="currentQuestsBtn" class="btn selected">Current Quests</h5>
						</div>
						<div class="col-xs-6">
							<h5 id="completedQuestsBtn" class="btn">Done Quests</h5>
						</div>
					</div>
					{{#each currentTaskList}}
						<div class="row currentTaskRow" id="task#{{id}}">
							<div class="col-xs-5">{{title}}</div>
							<div class="col-xs-3">{{level}} pts</div>
							<div class="col-xs-4 btn">Complete</div>
						</div>
					{{/each}}
					{{#each doneTaskList}}
						<div class="row doneTaskRow hidden">
							<div class="col-xs-7">{{title}}</div>
							<div class="col-xs-5">{{level}} pts</div>
							<!--<div class="col-xs-4 btn">Reopen</div>-->
						</div>
					{{/each}}
				</div>
				<div class="confirm">
					<p>Are you all done with <span id="taskTitle"></span>?</p>
					<a href="#" id="yesDone" class="btn">Yes</a>
					<a href="#" id="noDone" class="btn">No</a>
				</div>
				<h3 style="width:100%; text-align:center;">
					{{#if onlyOneCompleted}}
						Completed {{numCompleted}} Quest
					{{else}}
						Completed {{numCompleted}} Quests
					{{/if}}
				</h3>
			</div>
			{{#if success}}
			<div class="alert alert-success">
  			<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  			Information updated
			</div>
			{{/if}}
		</div>
		<!-- mainDiv -->

		<div id="sidebarDiv" class="toggled">
			<div class="row sidebarToggleButton sidebarButton">
				<a href="#menu-toggle">
					<img src="/images/HamburgerMenuBar-01.png" />
				</a>
			</div>
			<br/>
			<div id="welcomeMsgDiv" class="row">
				Welcome back {{name}}!
			</div>
			<div id="sidebarMenu"></div>
		</div>
		<!-- sidebarDiv -->
	</div>
	<!-- container -->


	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/app.js"></script>
	<script src="/js/quests.js"></script>
	<script src="/js/account.js"></script>
</body>

</html>
