<!-- Initial app launch screen. -->

<!doctype html>

<html>
<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/app.css">
	<link rel="stylesheet" type="text/css" href="/css/login.css">
</head>

<body>
	<div class="vertical-center">
		<div class="container">
			<div class="col-xs-8 col-xs-offset-2">
				<div class="row">
					<h1>CREWsades</h1>
				</div>
		        <form method="post" action="castle/select">
					<div class="row">
		            	<input type="text" name="username" placeholder="Username">
					</div> <div class="row">
		            	<input type="password" name="password" placeholder="Password">
					</div> <div class="row">
		            	<a href="castle/select" class="btn" id="loginBtn"><input type="submit" value="Login"></a>
					</div>
		        </form>

				<div class="row extra">
		        	<a href="#" id="forgotPassword" class="btn">Forgot your password?</a>
				</div>
				<div class="row extra">
					<a href="/signup" class="btn" id="makeAccount">Don't have an account?</a>
				</div>
				{{#if err}}
				<div>
					{{errMsg}}
				</div>
				{{/if}}
			</div>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/app.js"></script>
</body>
</html>
