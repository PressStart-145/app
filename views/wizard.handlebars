<!-- Map and quest board screen. -->

<!doctype html>

<html>
<head>
	<title>Create a new Quest</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/app.css">
</head>

<body>
	<div class="container">
		<a href="/castle" class="backBtn">Cancel</a>
        <div id="map">
            <ul>
                <li>town 1</li>
                <li>town 2</li>
            </ul>
        </div>
        <div id="questHeader"><a href="#">Show Quest Board</a></div>
        <div id="questBoard" class="shrink">
            <div id="available">
				<p>Available</p>
                <ul>
					{{#each quests}}
                    	<li>{{title}}</li>
					{{/each}}
                </ul>
            </div>
            <div id="inprogress">
				<p>In Progress</p>
				<ul>
	                <li>quest 4 - username</li>
	                <li>quest 5 - username</li>
				</ul>
            </div>
            <div id="done">
				<p>Done</p>
				<ul>
	                <li>quest 6 - username</li>
				</ul>
            </div>
        </div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/app.js"></script>
	<script src="/js/map.js"></script>
</body>
</html>
