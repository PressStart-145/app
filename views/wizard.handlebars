<!-- Map and quest board screen. -->

<!doctype html>

<html>
<head>
	<title>Create a new Quest</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/app.css">
	<link rel="stylesheet" type="text/css" href="/css/wizard.css">
</head>

<body>
	<div class="container wrap">
		<div id="mainDiv">
			<div class="row sidebarToggleButton">
				<a href="#menu-toggle" id="mainDivSidebarButtonImg">
					<img src="/images/HamburgerMenuBar-01.png" />
				</a>
			</div>
			<div class="container-fluid">
				<!-- <button class="backBtn">Back</button> -->
				<div class="container-fluid">
					<div class="row">
						<div class="col-xs-4">
							<img src="/images/characters/wizardTransparent.png" height="100px">
						</div>
						<div id="greedingDiv" class="col-xs-6">
							<div>Howdy Travler</div>
						</div>
					</div>
				</div>
				<div class="container-fluid">
					<div class="row extra">
						<div class="col-xs-4">
							<h6 id="openQuestsBtn" class="btn selected">Open</h6>
						</div>
						<div class="col-xs-4">
							<h6 id="currentQuestsBtn" class="btn">Active</h6>
						</div>
						<div class="col-xs-4">
							<h6 id="completedQuestsBtn" class="btn">Done</h6>
						</div>
					</div>
					{{#each inProgressTaskList}}
						<div class="row inProgressTaskList hidden">
							<div class="col-xs-5">{{title}}</div>
							<div class="col-xs-3">{{level}} pts</div>
							<div class="col-xs-4">{{takenBy}}</div>
						</div>
					{{/each}}
					{{#each doneTaskList}}
						<div class="row doneTaskRow hidden">
							<div class="col-xs-5">{{title}}</div>
							<div class="col-xs-3">{{level}} pts</div>
							<div class="col-xs-4">{{takenBy}}</div>
						</div>
					{{/each}}
					{{#each todoTaskList}}
						<div class="row todoTaskRow">
							<div class="col-xs-5">{{title}}</div>
							<div class="col-xs-3">{{level}} pts</div>
							<div class="col-xs-4 btn">Accept</div>
						</div>
					{{/each}}
				</div>
			</div>
		</div>
		<!-- mainDiv -->

		<div id="sidebarDiv" class="toggled">
			<div class="row sidebarToggleButton sidebarButton">
				<a href="#menu-toggle">
					<img src="/images/HamburgerMenuBar-01.png" />
				</a>
			</div>
			<br/>
			<div id="welcomeMsgDiv" class="row">
				Welcome back {{name}}!
			</div>
			<div id="sidebarMenu"></div>
		</div>
		<!-- sidebarDiv -->
	</div>
	<!-- container -->

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/app.js"></script>
	<script src="/js/wizard.js"></script>
</body>
</html>
