<!-- Initial app launch screen. -->

<!doctype html>

<html>
<head>
	<title>Sign Up</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/app.css">
	<link rel="stylesheet" type="text/css" href="/css/account.css">
</head>

<body>
	<div class="container">
		<div class="row">
				<center>
						<h2>Sign up</h2>
					</center>
		</div>
		<form method="post" action="/signup/add">
				<div class="row">
						<div class="col-xs-12">
								<input type="text" name="fullname" placeholder="Full Name" autofocus>
						</div>
				</div>
				<div class="row">
						<div class="col-xs-12">
								<input type="text" name="username" placeholder="Username">
						</div>
				</div>
				<div class="row">
						<div class="col-xs-12">
								<input type="password" name="password" placeholder="Password">
						</div>
				</div>
				<div class="row">
						<div class="col-xs-12">
								<input type="text" name="email" placeholder="E-mail">
						</div>
				</div>
				<div class="row">
						<div class="col-xs-12">
								<input type="file" name="image" accept="image/*">
						</div>
				</div>
				<div class="row">
						<center>
								<a href="/" class="btn backBtn"><input type="button" value="  Back "></a>
								<a href="" class="btn"><input type="submit" value="Submit"></a>
						</center>

				</div>
			</form>

	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/app.js"></script>
</body>
</html>
