<body>
	<div class="container">
		<div class="row">
				<center>
						<h2>Sign up</h2>
					</center>
		</div>
		<form method="post" action="/signup/add">
				<div class="row">
						<div class="col-xs-12">
								<input type="text" name="fullname" placeholder="Full Name" autofocus>
						</div>
				</div>
				<div class="row">
						<div class="col-xs-12">
								<input type="text" name="username" placeholder="Username">
						</div>
				</div>
				<div class="row">
						<div class="col-xs-12">
								<input type="password" name="password" placeholder="Password">
						</div>
				</div>
				<div class="row">
						<div class="col-xs-12">
								<input type="text" name="email" placeholder="E-mail">
						</div>
				</div>
				<div class="row">
						<div class="col-xs-12">
								<input type="file" name="image" accept="image/*">
						</div>
				</div>
				<div class="row">
						<center>
								<a href="/" class="btn backBtn"><input type="button" value="  Back "></a>
								<a href="" class="btn"><input type="submit" value="Submit"></a>
						</center>

				</div>
			</form>

	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/app.js"></script>
</body>
