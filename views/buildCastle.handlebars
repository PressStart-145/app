<!-- Build new castle screen. -->

<!doctype html>

<html>
<head>
	<title>Build a Castle</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/app.css">
	<link rel="stylesheet" type="text/css" href="/css/build.css">
	<!--<script src="/js/analytics.js"></script>-->
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-87591120-1', 'auto');
		ga('send', 'pageview');
	</script>
</head>

<body>
	<div class="container vertical-center">
        <div id="nameForm">
            <p>Name your castle, my lord.</p>
            <input type="text" id="name" placeholder="Castle Name" autofocus>
			<div id="badName" style="display: none;">That castle name is not available.</div>
            <a href="#" id="nameCastle" class="btn">Build</a>
			<div id="mapCastle" style="display: none;">
				<ul>
	                {{#each castles}}
						<li>{{name}}</li>
					{{/each}}
				</ul>
            </div>
        </div>
        <div id="addMembers" style="display: none;">
            <p>Summon your knights.</p>
			<input type="text" id="searchPhrase" placeholder="Username">
			<div class="row" style="margin-top: 0px;">
				<div class="col-xs-6 trim">
					<form id="inputSearch" onsubmit="formResults()" target="formresponse">
			            <input type="submit" id="searchMem" class="btn" value="Search">
						<!--<a href="#" id="searchMem" class="btn">Search</a>-->
					</form>
				</div><div class="col-xs-6 trim">
					<form id="sendBuild" method="post" action="/castle/add">
						<input type="submit" id="doneMem" class="btn" value="Done">
					</form>
				</div>
			</div>
            <div id="mapMem" style="display: none;">
				<ul>
					<li>{{currUser}}</li>
	                {{#each users}}
						<li>{{username}}</li>
					{{/each}}
				</ul>
            </div>
			<div class="frame">
				<div class="row">
					<p>Summoned:</p>
				</div>
				<div id="selectedMem" class="row"></div>
			</div>
        </div>
		<a href="../../castle/select" class="backBtn btn">Cancel</a>
		<iframe name='formresponse' style="display: none;"></iframe>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/app.js"></script>
    <script src="/js/buildCastle.js"></script>
</body>
</html>
