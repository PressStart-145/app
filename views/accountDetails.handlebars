<!-- User's account screen. -->

<!doctype html>

<html>

<head>
	<title>My Account</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/app.css">
	<link rel="stylesheet" type="text/css" href="/css/account.css">
</head>

<body>
	<div class="container wrap">
		<div id="mainDiv">
      <div class="row sidebarToggleButton">
				<a href="#menu-toggle" id="mainDivSidebarButtonImg">
					<img src="/images/HamburgerMenuBar-01.png" />
				</a>
			</div>
			<div class="row"><center><h2>Account Info</h2></center></div>
      <form method="post" action="/account/update">
        <div class="row">
                <div class="col-xs-4 accountDetailLabelDiv">
                  Username:
                </div>
                <div class="col-xs-8">
                  <h4>{{user.username}}</h4>
                </div>
        </div>
    <div class="row">
            <div class="col-xs-4 accountDetailLabelDiv">
              Name:
            </div>
            <div class="col-xs-8">
              <input type="text" name="name" placeholder={{user.name}}>
            </div>
    </div>
    <div class="row">
            <div class="col-xs-4 accountDetailLabelDiv">
              Password:
            </div>
            <div class="col-xs-8">
              <input type="text" name="password" placeholder={{user.password}}>
            </div>
    </div>
    <div class="row">
            <div class="col-xs-4 accountDetailLabelDiv">
              Email:
            </div>
            <div class="col-xs-8">
              <input type="text" name="email" placeholder={{user.email}}>
            </div>
    </div>
    <div class="row">
            <center>
              <a href="/account" class="btn"><input type="button" value="  Back "></a> <a href="castle/select" class="btn"><input type="submit" value="Update"></a>
            </center>

    </div>
      </form>
		</div>
		<!-- mainDiv -->

		<div id="sidebarDiv" class="toggled">
			<div class="row sidebarToggleButton sidebarButton">
				<a href="#menu-toggle">
					<img src="/images/HamburgerMenuBar-01.png" />
				</a>
			</div>
			<br/>
			<div id="welcomeMsgDiv" class="row">
				Welcome back {{name}}!
			</div>
			<div id="sidebarMenu"></div>
		</div>
		<!-- sidebarDiv -->
	</div>
	<!-- container -->


	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/app.js"></script>
	<script src="/js/quests.js"></script>
	<script src="/js/account.js"></script>
</body>

</html>
