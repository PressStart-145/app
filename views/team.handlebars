<body>
	<div class="container wrap">

		<div id="mainDiv">
			<div class="container-fluid">
				<div class="row sidebarToggleButton">
					<a href="#menu-toggle" id="mainDivSidebarButtonImg">
						<img src="/images/HamburgerMenuBar-01.png"/>
					</a>
				</div>
				<div id="castleNameDiv" class="row">
					<h1>{{castleName}}</h1>
				</div>
				<div class="row extra" id='rankingAchievmentButtonRow'>
					<div class="col-xs-4">
						<a href="#" id='usersButton' class="btn selected">Members</a>
					</div>
					<div class="col-xs-4">
						<a href="#" id='rankingsButton' class="btn">Rankings</a>
					</div>
					<div class="col-xs-4">
						<a href="#" id='achievementsButton' class="btn">Achievements</a>
					</div>
				</div>
			</div><div id="contentDiv" class="container-fluid">
				<div id="userDiv" class="listView">
					{{#each users}}
					{{#if currUser}}
					<div class="row userRowDiv currUserDiv">
					{{else}}
					<div class="row userRowDiv">
					{{/if}}
						<div class="col-xs-2 icon" style="background-image:url({{image}});"></div>
						<div class="col-xs-10">
							<div class="row">
								<bold>{{username}}</bold>
							</div>
							<div class="row userTaskRowDiv">
								{{#each taskList}}
								<div class="row">
									<div class="col-xs-1"></div>
									<div class="col-xs-11">{{task}}</div>
								</div>
								{{/each}}
							</div>
						</div>
					</div>
					{{/each}}
				</div>
				<div id="rankingDiv" class="hidden listView">
					{{#each rankings}}
					{{#if currUser}}
					<div class="row rankingRowDiv currUserDiv">
					{{else}}
					<div class="row rankingRowDiv">
					{{/if}}
						<div class="col-xs-2 icon" style="background-image:url({{image}});"></div>
						<div class="col-xs-10">
							<div class="row">
								<div class="col-xs-8" style="padding: 0;">{{username}}</div>
								<div class="col-xs-4" style="text-align: right;">{{numCompleted}}</div>
							</div>
						</div>
					</div>
					{{/each}}
				</div>

				<div id="achievementDiv" class="hidden listView">
					{{#each achievements}}
					<div class="row achievementRowDiv">
						<div class="col-xs-2 icon" style="background-image:url(/images/{{image}});"></div>
						<div class="row">
							<div class="col-xs-8">{{name}}</div>
							<div class="col-xs-4" style="text-align: right;">{{numCompleted}}</div>
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>


