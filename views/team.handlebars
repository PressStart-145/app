	<!-- Menu Toggle Script -->
	<script>

	$("#rankingsButton").click(function(e) {
			e.preventDefault();
			$("#achievementDiv").addClass("hidden");
			$("#userDiv").addClass("hidden");
			$("#rankingDiv").removeClass("hidden");

			$("#achievementsButton").removeClass("selected");
			$("#usersButton").removeClass("selected");
			$("#rankingsButton").addClass("selected");
	});
	$("#achievementsButton").click(function(e) {
			e.preventDefault();
			$("#rankingDiv").addClass("hidden");
			$("#userDiv").addClass("hidden");
			$("#achievementDiv").removeClass("hidden");

			$("#rankingsButton").removeClass("selected");
			$("#usersButton").removeClass("selected");
			$("#achievementsButton").addClass("selected");
	});
	$("#usersButton").click(function(e) {
			e.preventDefault();
			$("#rankingDiv").addClass("hidden");
			$("#achievementDiv").addClass("hidden");
			$("#userDiv").removeClass("hidden");

			$("#rankingsButton").removeClass("selected");
			$("#achievementsButton").removeClass("selected");
			$("#usersButton").addClass("selected");
	});

	$(".userRowDiv").click(function(e) {
			e.preventDefault();
			if($(this).find('.userTaskRowDiv').css('display') === 'none') {
				$(this).find('.userTaskRowDiv').slideDown();
			} else {
				$(this).find('.userTaskRowDiv').slideUp();
			}

	});
	</script>
